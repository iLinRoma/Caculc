<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/math_operation"
        android:layout_width="match_parent"
        android:layout_height="90sp"
        android:ellipsize="start"
        android:gravity="end"
        android:singleLine="true"
        android:textColor="@android:color/white"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/result_text"
        android:layout_width="match_parent"
        android:layout_height="100sp"
        android:ellipsize="end"
        android:gravity="end"
        android:singleLine="true"
        android:textColor="@android:color/white"
        android:textSize="30sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            >

            <TextView
                android:background="@drawable/bg_rounded_action_xml"
                android:id="@+id/btn_ac"
                style="@style/ActionButton"
                android:textSize="30sp"
                android:textColor="@color/black"
                android:text="@string/ac"
                android:layout_margin="3dp"
                />

            <TextView
                android:background="@drawable/bg_rounded_action_xml"
                android:id="@+id/plus_minus_btn"
                android:textColor="@color/black"
                android:textSize="30sp"
                style="@style/ActionButton"
                android:text="+/-"
                android:layout_margin="3dp"/>

            <TextView
                android:background="@drawable/bg_rounded_action_xml"
                android:id="@+id/percent_btn"
                android:textColor="@color/black"
                android:textSize="30sp"
                style="@style/ActionButton"
                android:text="%"
                android:layout_margin="3dp"/>

            <TextView
                android:background="@drawable/bg_rounded"
                android:id="@+id/split_btn"
                style="@style/MathButton"
                android:textSize="40sp"
                android:text="/"
                android:layout_margin="3dp"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">

            <TextView
                android:background="@drawable/bg_rounded_number"
                android:id="@+id/btn_7"
                style="@style/NumberButton"
                android:textSize="30sp"
                android:text="7"
                android:layout_margin="3dp"/>

            <TextView
                android:background="@drawable/bg_rounded_number"
                android:id="@+id/btn_8"
                style="@style/NumberButton"
                android:textSize="30sp"
                android:text="8"
                android:layout_margin="3dp"/>

            <TextView
                android:background="@drawable/bg_rounded_number"
                android:id="@+id/btn_9"
                style="@style/NumberButton"
                android:textSize="30sp"
                android:text="9"
                android:layout_margin="3dp"/>

            <TextView
                android:background="@drawable/bg_rounded"
                android:id="@+id/multiple_btn"
                style="@style/MathButton"
                android:textSize="40sp"
                android:text="*"
                android:layout_margin="3dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">

            <TextView
                android:background="@drawable/bg_rounded_number"
                android:id="@+id/btn_6"
                style="@style/NumberButton"
                android:textSize="30sp"
                android:text="6"
                android:layout_margin="3dp"/>

            <TextView
                android:background="@drawable/bg_rounded_number"
                android:id="@+id/btn_5"
                style="@style/NumberButton"
                android:textSize="30sp"
                android:text="5"
                android:layout_margin="3dp"/>

            <TextView
                android:background="@drawable/bg_rounded_number"
                android:id="@+id/btn_4"
                style="@style/NumberButton"
                android:textSize="30sp"
                android:text="4"
                android:layout_margin="3dp"/>

            <TextView
                android:background="@drawable/bg_rounded"
                android:id="@+id/minus_btn"
                style="@style/MathButton"
                android:textSize="40sp"
                android:text="-"
                android:layout_margin="3dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">

            <TextView
                android:background="@drawable/bg_rounded_number"
                android:id="@+id/btn_3"
                style="@style/NumberButton"
                android:textSize="30sp"
                android:text="3"
                android:layout_margin="3dp"/>

            <TextView
                android:background="@drawable/bg_rounded_number"
                android:id="@+id/btn_2"
                style="@style/NumberButton"
                android:textSize="30sp"
                android:text="2"
                android:layout_margin="3dp"/>

            <TextView
                android:background="@drawable/bg_rounded_number"
                android:id="@+id/btn_1"
                style="@style/NumberButton"
                android:textSize="30sp"
                android:text="1"
                android:layout_margin="3dp"/>

            <TextView
                android:background="@drawable/bg_rounded"
                android:id="@+id/plus_btn"
                style="@style/MathButton"
                android:textSize="40sp"
                android:text="+"
                android:layout_margin="3dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_marginTop="7dp">

            <TextView
                android:background="@drawable/bg_rounded_number"
                android:id="@+id/dot_btn"
                style="@style/NumberButton"
                android:textSize="30sp"
                android:text="."
                android:layout_margin="3dp"/>

            <TextView
                android:background="@drawable/bg_rounded_number"
                android:id="@+id/btn_0"
                style="@style/NumberButton"
                android:textSize="30sp"
                android:text="0"
                android:layout_margin="3dp"/>

            <TextView
                android:background="@drawable/bg_rounded_number"
                android:id="@+id/back_btn"
                style="@style/NumberButton"
                android:textSize="30sp"
                android:text="Back"
                android:layout_margin="3dp"/>

            <TextView
                android:background="@drawable/bg_rounded"
                android:id="@+id/equal_btn"
                style="@style/MathButton"
                android:textSize="40sp"
                android:text="="
                android:layout_margin="3dp"/>

        </LinearLayout>


    </LinearLayout>


</LinearLayout>